<div class="card">
    <div class="card-header">
        <h2>{{postdata.post.post_title}}</h2>
        <p>{{postdata.post.post_author}}</p>
        <p>{{postdata.post.post_date}}</p>
    </div>
    <div class="card-content">
        <p>{{postdata.post.post_content}}</p>
    </div>
    <div class="card-footer">

        {{#each postdata.comments as |comment|}}
        <div class="card">
            <div class="card-header">
                <p>{{comment.comment_author}}</p>
                <p>{{comment.comment_date}}</p>
            </div>
            <div class="card-content">
                <p>{{comment.comment_content}}</p>
            </div>
        </div>
        {{/each}}
    </div>

</div>